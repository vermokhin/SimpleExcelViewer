@using Omu.AwesomeMvc;

<div style="margin: 5px;">
	@(Html.Awe().Grid("ManagersGrid" + ViewData["Id"]) // please note, you need to have unique html ids
		.Groupable(true)
		.Url(Url.Action("GetManagersForOffice", "Home"))
		.Columns(
		new Column { Bind = "Id", Width = 50 },
		new Column { Bind = "Name", Width = 150 })
		.PersistenceKey("MealsCascade")
		.ColumnsPersistence(Persistence.View)
		.Resizable(true)
		.Parameter("officeId", ViewData["Id"]))
</div>